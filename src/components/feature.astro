---
interface Props {
  title: string
  description: string
  icon: string
}

const { title, description, icon } = Astro.props
---

<div class="flex gap-4 rounded-xl p-6 transition-colors hover:bg-dark-300">
  <div class="text-(2xl primary)">
    <div class={icon} />
  </div>
  <div>
    <h3 class="mb-2 text-xl font-bold">{title}</h3>
    <p class="text-gray-400">{description}</p>
  </div>
</div>
