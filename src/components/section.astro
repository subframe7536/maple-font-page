---
import { cls } from 'cls-variant'

interface Props {
  id: string
  class?: string
  title?: string
  subTitle?: string
}
const props = Astro.props
---

<section
  id={props.id}
  class={cls(
    'no-inview:scroll-mt-12 mx-auto max-w-4xl w-96% xs:w-90% text-left *:px-6',
    props.title && 'flex flex-col gap-8 md:gap-12 mb-16 pt-20',
    props.class,
  )}
>
  {
    props.title && (
      <h1 class="text-4xl c-secondary font-bold inview-1">
        {props.title}
      </h1>
    )
  }
  {
    props.subTitle && (
      <p class="text-xl c-note inview-2 md:text-2xl">
        {props.subTitle}
      </p>
    )
  }
  <div class={cls(props.title && props.subTitle && 'inview-3')}>
    <slot />
  </div>
</section>
