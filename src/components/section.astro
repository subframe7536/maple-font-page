---
import { cls } from 'cls-variant'

interface Props {
  id: string
  class?: string
  title?: string
}
const props = Astro.props
---

<section
  id={props.id}
  class={cls(
    'transition-(500 ease-out) translate-y-24 op-0 inview:(translate-y-0 op-100) no-inview:scroll-mt-24 mx-auto max-w-5xl w-96% xs:w-90% text-left container *:px-6',
    props.class,
  )}
>
  {
    props.title && (
      <h1 class="mb-12 text-(4xl secondary) font-bold">
        {props.title}
      </h1>
    )
  }
  <slot />
</section>
