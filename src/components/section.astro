---
import { cls } from 'cls-variant'

interface Props {
  id: string
  class?: string
}
const props = Astro.props
---

<section
  id={props.id}
  class={cls(
    'transition-(500 ease-out) translate-y-24 op-0 inview:(translate-y-0 op-100) [&[no-inview]]:[scroll-margin-top:6rem]',
    props.class,
  )}
>
  <slot />
</section>
