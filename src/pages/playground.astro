---
import type { FontFeatureItem } from '../sections/playground'

import Layout from '../layouts/Layout.astro'
import Nav from '../sections/nav.astro'
import PlaygroundArea from '../sections/playground'

const basicFeatures: FontFeatureItem[] = [
  {
    title: 'Enable ligatures',
    text: '==>',
    feat: 'calt',
  },
  {
    title: 'Alternative zero',
    text: '0',
    feat: 'zero',
  },
]
const cvFeatures: FontFeatureItem[] = [
  {
    title: 'Remove gaps',
    text: '@$%',
    feat: 'cv01',
  },
  {
    title: 'Alternative a',
    text: 'a',
    feat: 'cv02',
  },
  {
    title: 'Alternative i',
    text: 'i',
    feat: 'cv03',
  },
  {
    title: 'Alternative l',
    text: 'l',
    feat: 'cv04',
  },
]
const italicFeatures: FontFeatureItem[] = [
  {
    title: 'Alternative a',
    text: 'a',
    feat: 'cv31',
  },
  {
    title: 'Alternative f',
    text: 'f',
    feat: 'cv32',
  },
  {
    title: 'Alternative i & j',
    text: 'ij',
    feat: 'cv33',
  },
  {
    title: 'Alternative k',
    text: 'k',
    feat: 'cv34',
  },
  {
    title: 'Alternative l',
    text: 'l',
    feat: 'cv35',
  },
  {
    title: 'Alternative x',
    text: 'x',
    feat: 'cv36',
  },
  {
    title: 'Alternative y',
    text: 'y',
    feat: 'cv37',
  },
]
const cnFeatures: FontFeatureItem[] = [
  {
    title: 'Full width quote',
    text: '“”',
    feat: 'cv96',
  },
  {
    title: 'Full width ellipsis',
    text: '…',
    feat: 'cv97',
  },
  {
    title: 'Full width emdash',
    text: '—',
    feat: 'cv98',
  },
  {
    title: 'Tranditional punctuations',
    text: '，',
    feat: 'cv99',
  },
]
const ssFeatures: FontFeatureItem[] = [
  {
    title: 'Break equals',
    text: '==',
    feat: 'ss01',
  },
  {
    title: 'Break compare and equal',
    text: '>=',
    feat: 'ss02',
  },
  {
    title: 'Enable arbitrary tag',
    text: '[todo]',
    feat: 'ss03',
  },
  {
    title: 'Break multi underscore',
    text: '__',
    feat: 'ss04',
  },
  {
    title: 'Thin escape backslash',
    text: '\\n',
    feat: 'ss05',
  },
  {
    title: 'Break connected strokes',
    text: 'all',
    feat: 'ss06',
  },
  {
    title: 'Normal multiple greaters',
    text: '>>>',
    feat: 'ss07',
  },
  {
    title: 'Enable double / back rows',
    text: '=>>',
    feat: 'ss08',
  },
]
---

<Layout>
  <Nav isMain={false} />
  <!-- https://lilex.myrt.co/ -->
  <div class="h-screen w-full">
    <PlaygroundArea
      features={{
        basic: basicFeatures,
        cv: cvFeatures,
        italic: italicFeatures,
        cn: cnFeatures,
        ss: ssFeatures,
      }}
      sizeRange={[12, 200]}
      weightRange={[200, 800]}
      client:load
    />
  </div>
</Layout>
