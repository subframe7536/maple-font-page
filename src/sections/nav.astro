---
import { Button } from '../components/ui/button'

const navigatorText = [
  ['#intro', 'INTRO'],
  ['#why', 'WHY'],
  ['#features', 'FEATURES'],
  ['#faq', 'FAQ'],
  ['#credits', 'CREDITS'],
] as const

const pageText = {
  usage: 'Usage',
  download: 'Download',
}
---

<nav
  class="fixed z-10 w-full flex items-center bg-background/50 p-2 backdrop-blur-lg"
>
  <img src="/favicon.svg" alt="Maple Mono Icon" class="h-6" />
  <div class="ml-2 w-full flex justify-end sm:justify-between">
    <div class="hidden items-center sm:flex">
      {navigatorText.map(([anchor, text]) => (
        <Button
          size="sm"
          variant="link"
          as="a"
          href={anchor}
          aria-label={text}
        >
          {text}
        </Button>
      ))}
    </div>
    <div class="flex items-center gap-4">
      <Button
        size="sm"
        as="a"
        class="m-r--2"
        variant="link"
        href="https://github.com/subframe7536/maple-font"
        target="_blank"
        title="GitHub"
        aria-label="GitHub"
      >
        <div class="i-lucide-github mr-2 size-4" />
        GitHub
      </Button>
      <Button
        size="sm"
        variant="link"
        as="a"
        href="/how"
      >
        {pageText.usage}
      </Button>
      <Button size="sm" as="a" href="/playground">
        {pageText.download}
      </Button
      >
    </div>
  </div>
</nav>
