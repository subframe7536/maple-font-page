---
import Section from '@/components/section.astro'
import { useIndexTranslation } from '@/locales/i18n'

import Reason from './reason.md'
import ReasonCN from './reason_cn.md'

import './image.css'

const locale = Astro.currentLocale
const { title } = await useIndexTranslation(locale, 'why')

const data = {
  id: 'why',
  title,
}
---

<Section {...data}>
  <div class="inview-2 text-xl leading-relaxed prose">
    {locale!.startsWith('zh') ? <ReasonCN /> : <Reason /> }
  </div>
</Section>
