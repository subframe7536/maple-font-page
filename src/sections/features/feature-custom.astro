---
import mapleTheme from '@/assets/maple-dark-color-theme.json'
import { Button } from '@/components/ui/button'
import { useFeatureTranslation } from '@/utils/i18n'
import { Code } from 'astro:components'

import SubSectionTitle from './part/sub-section-title.astro'

const {
  buttonText,
  link,
  description,
  title,
} = await useFeatureTranslation(Astro.currentLocale, 'custom')

const data = {
  title,
  description,
  icon: 'i-lucide-hammer',
}

const code = `{
  "$schema": "./source/schema.json",
  "family_name": "Maple Mono",
  "use_hinted": true,
  "pool_size": 4,
  "ligature": true,
  "feature_freeze": {
    // ...
  }
}`
---

<SubSectionTitle icon={data.icon} title={data.title}>
  <div class="grid gap-4 md:(grid-cols-2 items-center gap-8)">
    <Code
      code={code}
      theme={mapleTheme as any}
      lang="jsonc"
      class="rounded-lg p-4 text-3.5 inview-1 sm:rounded-2xl sm:text-4"
    />
    <div class="flex flex-col gap-8 *:w-fit inview-2">
      <p class="text-4 leading-relaxed md:text-5">
        {data.description}
      </p>
      <!-- todo)) -->
      <Button
        as="a"
        variant="secondary"
        href={link}
        target="_blank"
      >
        {buttonText}
      </Button>
    </div>
  </div>
</SubSectionTitle>
