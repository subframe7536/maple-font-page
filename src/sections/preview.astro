---
import { Code } from 'astro:components'
import Section from '../components/section.astro'

const codeExample = `// Example with ligatures and special characters
const calculateSum = (numbers: number[]): number => {
  return numbers.reduce((sum, n) => sum + n, 0)
}

interface Config {
  maxIterations: number
  threshold: number
}

// Special characters showcase
const symbols = '-> => != >= <= @'
const operators = '&& || ?? ?. %%'

/* Nerd Font icons demo */
const icons = '     '`

const cssExample = `@font-face {
  font-family: 'Maple Mono';
  font-weight: 100 900;
  font-style: normal;
  src: url('/fonts/MapleMono[wght]-VF.woff2') format('woff2');
}

/* Enable font features */
.font-maple {
  font-feature-settings:
    'calt' 1,  /* Contextual Alternates */
    'zero' 1,  /* Slashed Zero */
    'ss01' 1,  /* Stylistic Set 1 */
    'cv01' 1   /* Character Variant 1 */
}`
---

<Section id="preview" class="py-20">
  <div class="mx-auto px-4 container">
    <h2 class="mb-12 text-center text-4xl font-bold">Preview</h2>
    <div class="grid mx-auto max-w-5xl gap-8 md:grid-cols-2">
      <div class="space-y-4">
        <h3 class="text-2xl font-bold">TypeScript Example</h3>
        <div class="overflow-hidden rounded-lg shadow-lg">
          <Code code={codeExample} lang="typescript" theme="github-dark" />
        </div>
      </div>
      <div class="space-y-4">
        <h3 class="text-2xl font-bold">CSS Configuration</h3>
        <div class="overflow-hidden rounded-lg shadow-lg">
          <Code code={cssExample} lang="css" theme="github-dark" />
        </div>
      </div>
    </div>
  </div>
</Section>
