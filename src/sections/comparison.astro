---
import ComparsionTabs from '../components/comparison-tabs'
import Section from '../components/section.astro'

const fonts = [
  {
    name: 'JetBrains Mono',
    fontClass: 'font-jetbrains',
  },
  {
    name: 'Fira Code',
    fontClass: 'font-fira',
  },
  {
    name: 'Iosevka',
    fontClass: 'font-iosevka',
  },
  {
    name: 'Consolas',
    fontClass: 'font-consolas',
  },
  {
    name: 'Ubuntu Mono',
    fontClass: 'font-ubuntu',
  },
]
---

<Section id="comparison" class="py-20">
  <div class="mx-auto px-4 container">
    <h2 class="mb-4 text-center text-4xl font-bold">Font Comparison</h2>
    <p class="mx-auto mb-12 max-w-2xl text-(center foreground/80)">
      See how Maple Mono compares to other popular programming fonts
    </p>

    <div class="grid mx-auto max-w-5xl gap-8">
      <ComparsionTabs client:load items={fonts} class="w-400px" />
    </div>
  </div>
</Section>
