---
import Section from '../components/section.astro'
import { Button } from '../components/ui/button'
---

<Section
  id="hero"
  class="h-90dvh flex items-center justify-center md:min-h-screen"
>
  <div class="mx-auto animate-fade-in px-4 py-20 container">
    <div class="mx-auto max-w-3xl text-center space-y-10">
      <h1
        class="text-12 font-700 leading-snug hero-gradient lg:text-20 md:text-16"
      >
        Maple Mono
      </h1>
      <p class="text-xl font-(medium italic) leading-relaxed">
        A modern monospace font that smooth your coding flow
      </p>
      <div class="mx-auto flex flex-(wrap) items-center justify-center gap-6">
        <Button
          as="a"
          href="#why"
          size="lg"
          variant="default"
        >
          Learn More
        </Button>
        <Button
          as="a"
          size="lg"
          href="/download#custom"
          variant="outline"
        >
          OpenType Features
        </Button>
      </div>
    </div>
  </div>
</Section>
