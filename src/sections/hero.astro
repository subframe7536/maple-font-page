---
import Section from '../components/section.astro'
import { Button } from '../components/ui/button'
---

<Section
  id="hero"
  class="h-80dvh flex items-center justify-center bg-background md:min-h-screen"
>
  <div class="mx-auto animate-fade-in px-4 py-20 container">
    <div class="mx-auto max-w-3xl text-center space-y-8">
      <h1
        class="hero-gradient text-12 text-transparent font-700 leading-snug lg:text-20 md:text-16"
      >
        Maple Mono
      </h1>
      <p class="text-xl font-(medium italic) leading-relaxed">
        A modern monospace font that smooth your coding flow
      </p>
      <div class="flex items-center justify-center gap-6">
        <Button
          as="a"
          href="#features"
          size="lg"
          variant="default"
        >
          Learn More
        </Button>
        <Button
          as="a"
          size="lg"
          href="/download"
          variant="outline"
        >
          OpenType Features
        </Button>
      </div>
    </div>
  </div>
</Section>
